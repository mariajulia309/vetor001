public class JavaApplication1 {

    /**
     * @param args the command line arguments
     */
    public static void main(String[] args) {
        // TODO code application logic here
        final int TAM_VETOR=10; // Declarando o tamanho final do vetor em uma variavel sem alterações
       int numeros[] = new int[TAM_VETOR]; // ao inves de colocar o tamanho (10), só colocar TAM_VETOR
       
       for(int i=0; i< numeros.length; i++){ //numeros.length é o tamanho do vetor, sem precisar alterar 
       System.out.println(numeros[i] + "");
       
       }
    }
    
}
